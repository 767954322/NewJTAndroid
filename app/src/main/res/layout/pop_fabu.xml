<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_pop_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bufabu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/font_32"
        android:src="@drawable/bufabu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_bufabu"
        android:layout_marginBottom="@dimen/font_22"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_takephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/font_10"
            android:drawableTop="@drawable/xiangji"
            android:gravity="center"
            android:text="相机"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_95"
            android:layout_toRightOf="@+id/tv_takephoto"

            android:drawablePadding="@dimen/font_10"
            android:drawableTop="@drawable/xiangce"
            android:gravity="center"
            android:text="相册"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14" />

    </RelativeLayout>

</RelativeLayout>
