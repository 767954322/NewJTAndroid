<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_imageview_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_150"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/font_10"
        android:layout_marginRight="@dimen/font_10" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_4d000000"
        android:layout_alignTop="@+id/iv_imageview_one"
        android:layout_alignLeft="@+id/iv_imageview_one"
        android:layout_alignRight="@+id/iv_imageview_one"
        android:layout_alignBottom="@+id/iv_imageview_one">

        <TextView
            android:id="@+id/tv_name_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:lineSpacingExtra="@dimen/font_8"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/size_20"
            android:maxLength="12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精选文章"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/font_10"
            android:gravity="center"
            android:layout_marginRight="@dimen/font_10"
            android:paddingTop="@dimen/font_7"
            android:paddingBottom="@dimen/font_7"
            android:paddingRight="@dimen/font_4"
            android:paddingLeft="@dimen/font_4"
            android:textColor="@color/white"
            android:textSize="@dimen/size_11"
            android:background="@drawable/wenzhang"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_10"
        android:layout_below="@+id/iv_imageview_one"
        android:layout_marginBottom="@dimen/font_10"
        android:layout_marginTop="@dimen/font_15"
        android:background="@color/bg_f2f2f2" />

</RelativeLayout>
