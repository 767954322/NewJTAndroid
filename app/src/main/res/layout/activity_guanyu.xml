<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_navbar"
        android:background="@color/white">

        <include
            android:id="@+id/common_navbar"
            layout="@layout/view_navigation_header" />

        <RelativeLayout
            android:id="@+id/rl_guanyu_youxiang"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_58"
            android:layout_below="@+id/common_navbar">

            <TextView
                android:id="@+id/tv_guanyu_youxiang_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_15"
                android:text="联系邮箱"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/tv_guanyu_youxiang_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:text="jthudong@idcool.com.cn"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_14" />


        </RelativeLayout>

        <View
            android:id="@+id/view_center_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_1"
            android:layout_below="@+id/rl_guanyu_youxiang"
            android:layout_marginLeft="@dimen/font_15"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rl_guanyu_wx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_58"
            android:layout_below="@+id/view_center_two">

            <TextView
                android:id="@+id/tv_guanyu_wx_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_15"
                android:text="微信公众号"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/tv_guanyu_wx_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:text="家图互动"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>

        <View
            android:id="@+id/view_center_three"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_1"
            android:layout_below="@+id/rl_guanyu_wx"
            android:layout_marginLeft="@dimen/font_15"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rl_guanyu_wb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_58"
            android:layout_below="@+id/view_center_three">

            <TextView
                android:id="@+id/tv_guanyu_wb_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_15"
                android:text="官方微博"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/tv_guanyu_wb_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:text="新浪微博@家图互动"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_14" />

        </RelativeLayout>


        <View
            android:id="@+id/view_center_four"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_1"
            android:layout_below="@+id/rl_guanyu_wb"
            android:layout_marginLeft="@dimen/font_15"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rl_guanyu_tt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_58"
            android:layout_below="@+id/view_center_four">

            <TextView
                android:id="@+id/tv_guanyu_tt_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_15"
                android:text="今日头条"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/tv_guanyu_tt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:text="家图网"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>

        <View
            android:id="@+id/view_center_five"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_1"
            android:layout_below="@+id/rl_guanyu_tt"
            android:layout_marginLeft="@dimen/font_15"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rl_guanyu_bb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_58"
            android:layout_below="@+id/view_center_five">

            <TextView
                android:id="@+id/tv_guanyu_bb_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_15"
                android:text="系统版本"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/tv_guanyu_bb_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>

        <View
            android:id="@+id/view_center_six"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_1"
            android:layout_below="@+id/rl_guanyu_bb"
            android:layout_marginLeft="@dimen/font_15"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rl_guanyu_jj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_center_six">

            <TextView
                android:id="@+id/tv_guanyu_jj_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/font_15"
                android:layout_marginTop="@dimen/font_17"
                android:text="简介"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/tv_guanyu_jj_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_guanyu_jj_tital"
                android:layout_marginBottom="@dimen/font_25"
                android:layout_marginLeft="@dimen/font_15"
                android:layout_marginTop="@dimen/font_15"
                android:lineSpacingExtra="@dimen/font_9"
                android:layout_marginRight="@dimen/font_15"
                android:text="\t\t\t\t家图致力于将领先的人工智能图像识别技术应用于家居垂直行业。目前已获得由IDG资本投资。家图帮助用户实现从家居空间设计、色彩选型、风格定位、软装搭配直至最终商品购买的全程智能服务。家图与全球领先的人工智能公司合作，率先利用色彩识别和商品识别技术提供家居支持,帮助用户大幅度缩短从设计到购买的决策时间。家图与各类专业家居从业者合作，帮助用户解惑家装问题、启发设计灵感、美化家居生活。"
                android:textColor="@color/bg_707070"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>
