<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.homechart.app.myview.ClearEditText
        android:id="@+id/cet_clearedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/font_20"
        android:background="@drawable/bg_edittext_search"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="搜索你感兴趣的图片，用户"
        android:paddingLeft="@dimen/font_15" />


    <Button
        android:id="@+id/bt_change_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cet_clearedit"
        android:layout_marginLeft="@dimen/font_25"
        android:text="切换" />

    <RelativeLayout
        android:id="@+id/pic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_change_frag"
        android:layout_weight="1"
        android:orientation="vertical" />


    <com.homechart.app.recyclerlibrary.recyclerview.HRecyclerView
        android:id="@+id/rcy_recyclerview_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bt_change_frag"
        app:loadMoreEnabled="true"
        app:loadMoreFooterLayout="@layout/layout_hrecyclerview_load_more_footer"
        app:refreshEnabled="true"
        app:refreshHeaderLayout="@layout/layout_hrecyclerview_refresh_header" />


</RelativeLayout>