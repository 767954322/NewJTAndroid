<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_homepic_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_8"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_center_msgicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_10"
            android:layout_marginRight="@dimen/font_12"
            android:src="@drawable/ling" />

        <ImageView
            android:id="@+id/iv_top_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_15"
            android:layout_marginRight="@dimen/font_10"
            android:src="@drawable/jiatu" />

        <com.homechart.app.myview.ClearEditText
            android:id="@+id/cet_clearedit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_27"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/iv_center_msgicon"
            android:layout_toRightOf="@+id/iv_top_logo"
            android:background="@drawable/bg_edittext_search"
            android:drawableLeft="@drawable/fdj"
            android:drawablePadding="@dimen/font_6"
            android:gravity="center_vertical"
            android:hint="搜索你感兴趣的图片"
            android:textColorHint="@color/bg_8f8f8f"
            android:paddingLeft="@dimen/font_10"
            android:textSize="@dimen/size_14" />

    </RelativeLayout>

    <View
        android:id="@+id/view_line_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_homepic_top"
        android:layout_marginTop="@dimen/font_7"
        android:background="@color/view_line" />

    <RelativeLayout
        android:id="@+id/rl_unreader_msg_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/font_8"
        android:layout_marginTop="@dimen/font_10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_unreader_mag_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/xiaoxi1" />

        <TextView
            android:id="@+id/tv_unreader_mag_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/font_8"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_unreader_msg_double"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/font_5"
        android:layout_marginTop="@dimen/font_10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_unreader_mag_double"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/xiaoxi2" />

        <TextView
            android:id="@+id/tv_unreader_mag_double"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="99"
            android:textColor="@color/white"
            android:textSize="@dimen/font_8"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_tos_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/view_line_top">

        <LinearLayout
            android:id="@+id/ll_pic_choose"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_90"
            android:background="@color/white"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/rl_kongjian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1">

                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/iv_kongjian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/kongjian1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_jubu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1">

                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/iv_jubu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/jubu1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_zhuangshi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1">

                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/iv_zhuangshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/zhuangshi1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_shouna"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1">

                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/iv_shouna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/shouna1" />
            </RelativeLayout>

        </LinearLayout>
        <View
            android:id="@+id/view_line_back"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/ll_pic_choose" />
        <View
            android:id="@+id/view_line_bommon"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/ll_pic_choose"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rl_pic_change"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_44"
            android:layout_below="@+id/view_line_bommon"
            android:visibility="gone"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_change_frag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/font_5"
                android:paddingLeft="@dimen/font_100"
                android:paddingRight="@dimen/font_12"
                android:paddingTop="@dimen/font_5"
                android:src="@drawable/pubuliu" />
        </RelativeLayout>


    </RelativeLayout>


    <com.homechart.app.recyclerlibrary.recyclerview.HRecyclerView
        android:id="@+id/rcy_recyclerview_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_tos_choose"
        app:loadMoreEnabled="true"
        app:loadMoreFooterLayout="@layout/layout_hrecyclerview_load_more_footer"
        app:refreshEnabled="true"
        app:refreshHeaderLayout="@layout/layout_hrecyclerview_refresh_header" />


</RelativeLayout>