<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_16"
        android:gravity="center">


        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="@dimen/font_70"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/bg_262626"
            android:textSize="@dimen/size_14" />

        <com.homechart.app.myview.ClearEditText
            android:id="@+id/cet_clearedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_15"
            android:layout_toLeftOf="@+id/tv_quxiao"
            android:background="@drawable/bg_edittext_search"
            android:drawableLeft="@drawable/shared_icon"
            android:drawablePadding="@dimen/font_5"
            android:gravity="center_vertical"
            android:hint="输入关键词搜索"
            android:paddingBottom="@dimen/font_5"
            android:paddingLeft="@dimen/font_15"
            android:paddingTop="@dimen/font_5" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_search_tital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_search"
        android:layout_marginTop="@dimen/font_15"
        android:background="@color/bg_f2f2f2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/font_10"
            android:layout_marginLeft="@dimen/font_15"
            android:layout_marginTop="@dimen/font_15"
            android:text="大家都在搜"
            android:textColor="@color/bg_8f8f8f"
            android:textSize="@dimen/size_14" />

    </RelativeLayout>

</RelativeLayout>