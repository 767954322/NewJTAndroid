<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.homechart.app.myview.RoundImageView
        android:id="@+id/iv_color_pic"
        android:layout_width="@dimen/font_55"
        android:layout_height="@dimen/font_55"
        android:layout_centerHorizontal="true"
        android:background="@color/bank_bg02"/>

    <TextView
        android:id="@+id/iv_color_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_color_pic"
        android:layout_marginTop="@dimen/font_10"
        android:text="黑色"/>

</RelativeLayout>
