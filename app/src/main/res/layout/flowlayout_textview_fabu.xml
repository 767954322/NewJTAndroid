<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_fabu"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/font_28"
        android:layout_marginBottom="@dimen/font_15"
        android:layout_marginLeft="@dimen/font_13"
        android:background="@drawable/bg_edittext_fabu"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/font_12"
        android:paddingRight="@dimen/font_12"
        android:textColor="@color/bg_e79056"
        android:textSize="@dimen/size_14" />

    <ImageView
        android:id="@+id/iv_fabu_tag_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@+id/tv_fabu"
        android:layout_alignTop="@+id/tv_fabu"
        android:src="@drawable/delete_search" />

</RelativeLayout>




