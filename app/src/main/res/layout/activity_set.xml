<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/bg_ed">

    <include
        android:id="@+id/common_navbar"
        layout="@layout/view_navigation_header" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_navbar"
        android:background="@color/bg_f9">

        <RelativeLayout
            android:id="@+id/rl_set_guanyu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_55">

            <TextView
                android:id="@+id/tv_guanyu_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_20"
                android:text="关于家图"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_16" />


            <ImageView
                android:id="@+id/iv_guanyu_set_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:src="@drawable/next" />


        </RelativeLayout>

        <View
            android:id="@+id/view_center_two"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_set_guanyu"
            android:layout_marginLeft="@dimen/font_15"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rl_set_clear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_55"
            android:layout_below="@+id/view_center_two">

            <TextView
                android:id="@+id/tv_clear_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_20"
                android:text="清除缓存"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_16" />

            <TextView
                android:id="@+id/tv_clear_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_20"
                android:text="0.0M"
                android:textColor="@color/bg_8f8f8f"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>

        <View
            android:id="@+id/view_center_three"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_set_clear"
            android:layout_marginLeft="@dimen/font_15"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rl_set_fankui"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_55"
            android:layout_below="@+id/view_center_three">

            <TextView
                android:id="@+id/tv_fankui_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_20"
                android:text="使用反馈"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_16" />


            <ImageView
                android:id="@+id/iv_fankui_set_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:src="@drawable/next" />
        </RelativeLayout>


        <View
            android:id="@+id/view_center_four"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_set_fankui"
            android:layout_marginLeft="@dimen/font_15"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rl_set_tuijian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_55"
            android:layout_below="@+id/view_center_four">

            <TextView
                android:id="@+id/tv_tuijian_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_20"
                android:text="向你的朋友推荐家图"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_16" />

            <ImageView
                android:id="@+id/iv_tuijian_set_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:src="@drawable/next" />
        </RelativeLayout>
        <View
            android:id="@+id/view_center_five"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_set_tuijian"
            android:layout_marginLeft="@dimen/font_15"
            android:background="@color/view_line" />
        <RelativeLayout
            android:id="@+id/rl_set_haoping"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_55"
            android:layout_below="@+id/view_center_five">

            <TextView
                android:id="@+id/tv_haoping_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_20"
                android:text="给APP好评"
                android:textColor="@color/case_text_tital_name"
                android:textSize="@dimen/size_16" />

            <ImageView
                android:id="@+id/iv_haoping_set_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_15"
                android:src="@drawable/next" />
        </RelativeLayout>

    </RelativeLayout>


    <Button
        android:id="@+id/btn_outlogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_40"
        android:layout_below="@+id/rl_top"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginRight="@dimen/font_15"
        android:layout_marginTop="@dimen/font_40"
        android:background="@drawable/bt_login"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14" />

</RelativeLayout>